<!DOCTYPE html>
<html lang="en">
  <%- include ("../partials/admin/header") %>
  <body>
    <div class="background"></div>
    <div class="blur-overlay"></div>
    <%- include("../partials/admin/sidebar") %>
    <div class="main-content">
      <div class="header">
        <h1>Dashboard</h1>
        <div class="search">
          <input type="text" name="search" id="search" placeholder="Search" />
          <label for="search"><i class="fa fa-search"></i></label>
        </div>
      </div>
      <div class="content">
        <div class="card-container">
          <div class="card">
            <h1>New orders</h1>
            <p>10 orders</p>
            <a href="">See details</a>
          </div>
          <div class="card">
            <h1>New registers</h1>
            <p>2 users</p>
            <a href="">See details</a>
          </div>
          <div class="card">
            <h1>Month income</h1>
            <p>1234$</p>
            <a href="">See details</a>
          </div>
        </div>
        <div class="visualize-container">
          <div id="chart"></div>
          <div id="order-table">
            <div class="table-row">
              <h4>ID</h4>
              <h4>Date</h4>
              <h4>Address</h4>
              <h4>Phone</h4>
              <h4>Total</h4>
              <h4>State</h4>
            </div>
            <div class="table-row">
              <p>1</p>
              <p>01/07/2021</p>
              <p>Tam ky, Quang Nam, Vietnam</p>
              <p>0123456789</p>
              <p class="total">1253$</p>
              <div class="success">Delivered</div>
            </div>
            <div class="table-row">
              <p>1</p>
              <p>01/07/2021</p>
              <p>Tam ky, Quang Nam, Vietnam</p>
              <p>0123456789</p>
              <p class="total">1253$</p>
              <div class="delivering">Delivering</div>
            </div>
            <div class="table-row">
              <p>1</p>
              <p>01/07/2021</p>
              <p>Tam ky, Quang Nam, Vietnam</p>
              <p>0123456789</p>
              <p class="total">1253$</p>
              <div class="pending">Pending</div>
            </div>
            <div class="table-row">
              <p>1</p>
              <p>01/07/2021</p>
              <p>Tam ky, Quang Nam, Vietnam</p>
              <p>0123456789</p>
              <p class="total">1253$</p>
              <div class="cancel">Cancel</div>
            </div>
            <div class="table-row">
              <p>1</p>
              <p>01/07/2021</p>
              <p>Tam ky, Quang Nam, Vietnam</p>
              <p>0123456789</p>
              <p class="total">1253$</p>
              <div class="success">Delivered</div>
            </div>
            <div class="table-row">
              <p>1</p>
              <p>01/07/2021</p>
              <p>Tam ky, Quang Nam, Vietnam</p>
              <p>0123456789</p>
              <p class="total">1253$</p>
              <div class="success">Delivered</div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/apexcharts"></script>
    <script>
      var options = {
        chart: {
          type: "line",
        },
        stroke: {
          curve: "smooth",
        },
        series: [
          {
            name: "sales",
            data: [1275, 1262, 800, 1500, 1700, 1200, 1900, 2100, 1300],
          },
        ],
        xaxis: {
          categories: [
            "Jan",
            "Feb",
            "Mar",
            "Apr",
            "May",
            "Jun",
            "Jul",
            "Aug",
            "Sep",
            "Oct",
            "Nov",
          ],
        },
      };

      var chart = new ApexCharts(document.querySelector("#chart"), options);

      chart.render();
    </script>
  </body>
</html>
